<%= form_with model: @user,url: user_session_path,local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="important-mark">必須</span>
    </div>
    <%= f.email_field :email, class:"new-reg-in", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="important-mark">必須</span>
    </div>
    <%= f.password_field :password, class:"new-reg-in", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
   <div class ="login-b">
    <%= f.submit "ログイン" ,class:"next-f-btn" %>
   </div>
    <div>
    <%= link_to 'トップへ戻る',root_path, class: "modoru" %>
    </div>
  </div>
</div>
<% end %>

