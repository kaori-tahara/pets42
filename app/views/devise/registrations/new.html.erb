<div class='form-wrap'>
   <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
 <%= form_with model:@user, url: user_registration_path ,local: true do |f| %>  
 <%= render "shared/error_messages",model: f.object%> 
  <div class='form-header'>
    <h1 class='form-header-text'>
      Pets会員情報入力
    </h1>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="important-mark">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-reg", id:"nickname", placeholder:"例) Pets太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="important-mark">必須</span>
    </div>
    <%= f.email_field :email, class:"input-reg", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
  <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="important-mark">必須</span>
    </div>
    <%= f.password_field :password, class:"input-reg", id:"password", placeholder:"6文字以上の半角英数字" %>
    
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="important-mark">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-reg", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
      <span class="important-mark">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :first_name, class:"input-reg", id:"first-name", placeholder:"例) 犬" %>
      <%= f.text_area :family_name, class:"input-reg", id:"family-name", placeholder:"例) 大好き子" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
      <span class="important-mark">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :first_kana, class:"input-reg", id:"first-kana", placeholder:"例) イヌ" %>
      <%= f.text_area :family_kana, class:"input-reg", id:"family-kana", placeholder:"例) ダイスキコ" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="important-mark">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birth,
                    class:'input-reg',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div> 
  </div>
  <div class='register-btn'>
    <%= f.submit "NEXT!" ,class:"next-f-btn" %>
  </div>
 <% end %>
</div>
