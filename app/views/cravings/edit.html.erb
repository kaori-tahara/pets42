 <header class ="new-head">
  <div class = "left-link">
  <%= link_to image_tag("logo.png", class: "pets-icon"), "/" %>
  </div>
  <div class ="right-link">
  <%= link_to '提供一覧へ戻る', "/cravings", class: "cr-new-backbtn" %>
  </div>
 </header>

<div class = "cr-edit-main">
  <div class = "new-contens">
   <div class = "contens">
    <h2>変更箇所を記載してください</h2>
    <%= form_with model:@craving, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
     <%#写真%>
     <div class="img-upload">
      <div class="bold-text">
       ※自分をアピールできる写真を載せてみよう。
      </div>
      <div class="field">
        <%= f.file_field :craving_picture,class:"" %>
      </div>
     </div>
     <%#写真%>
     <%#title,text%>
     <div class="title-text">
      <div class="bold-text">
        タイトル
        <span class="important-mark">必須</span>
      </div>
      <%= f.text_field :title, class:"field", id:"craving-titile", placeholder:"タイトル（必須 40文字まで)", maxlength:"40" %>
      <div class="craving-explain">
        <div class="bold-text">
          アピール文
          <span class="important-mark">必須</span>
        </div>
        <%= f.text_area :text, class:"field", id:"craving-text", placeholder:"例）過去に犬を飼っていましたが、マンションに引越した為飼うことができません。お散歩の大変さも理解しているので、ぜひ手伝わせてください！等" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
     <%#title,text%>
      <%#仕事の情報%>
      <div class="craving-detail">
      <div class="bold-text">散歩の詳細情報</div>
      <div class="sampo-exp">
        <div class="bold-text">
          犬の飼育経験
          <span class="important-mark">必須</span>
        </div>
        <%= f.collection_select(:experience_id , Experience.all, :id, :name, {}, {class:"field", id:"experience"}) %>
        <div class="bold-text">
          希望日時
          <span class="important-mark">必須</span>
        </div>
         <%= f.date_field :working_date, class:"field", id:"working_date" %>
        <div class="bold-text">
           お散歩可能時間
          <span class="important-mark">必須</span>
        </div>
        <%= f.collection_select(:working_hour_id, WorkingHour.all, :id, :name, {}, {class:"field", id:"working_hour"}) %>
         <div class="bold-text">
          お散歩可能：時間帯
          <span class="important-mark">必須</span>
        </div>
        <%= f.collection_select(:working_time_id, WorkingTime.all, :id, :name, {}, {class:"field", id:"working_time"}) %>
      </div>  
    </div>
     <%#仕事の情報%>
     <%# 下部ボタン %>
      <div class="sell-btn-contents">
      <%= f.submit "散歩提供の変更を投稿する" ,class:"sampo-btn" %>
      </div>
    <%# /下部ボタン %>
   </div>
  <%end%>
 </div>
</div>