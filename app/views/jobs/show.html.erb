<%= render "shared/header" %>
 <div class ="main">
      <div class = "main-up">
       <h2 class ="show-top">お散歩依頼情報</h2>
       <div class = "contents">
         <div class ="show-pic">
         <%# 交渉ずみならばフラッグをつける表示 %>
            <% if @job.job_history.present?%> 
            <%= image_tag "flag.png"%>
            <%end%>
          <%# //交渉ずみならば表示 %>
          <% if @job.dog_picture.present?%>
          <%= image_tag @job.dog_picture, class: "job-img" %>
          <% else %>
          <%= image_tag "demologo.png", class:"demo-pic"%>
          <%end%>
         </div>
         <div class = "show-titles">
           <div>
           <%= @job.user.nickname%>さんの依頼です
           </div>
           <div>
           タイトル<%= @job.title %>
           </div>
           <div>
           ワンちゃんの名前<%= @job.dog_name %>
           </div>
           <div>
           犬種<%= @job.dog_bleed %>
           </div>
           <div>
           ワンちゃんの年齢 約<%= @job.dog_age %>歳
           </div>
         </div>
        </div>
      </div>

      <div class ="main-middle">
        <div class = "show-ex">
         <h2>依頼詳細</h2>
         <div>
         希望散歩時間<%= @job.working_hour.name %>
         </div>
         <div>
         希望日時<%= @job.working_date%>
         </div>
         <div>
         希望時間帯<%=@job.working_time.name%>
         </div>
         <div>
         都道府県<%= @job.user.prefecture.name %>
         </div>
         <div>
         市町村<%= @job.user.city%>
         </div>
        </div>
        <div class ="show-text">
         <div>
         <%= @job.user.nickname%>さんからのメッセージ
         </div>
         <div>
         <%= @job.text%>
         </div>
        </div>
      </div>
   </div>

    <% if user_signed_in? && current_user.id == @job.user_id %>
    <%= link_to '編集', edit_job_path(@job.id), method: :get, class: "job-edit" %>
    <p class='matawa'>または</p>
    <%= link_to '削除', job_path(@job.id) , method: :delete, class:'job-destroy' %>
    <p class='or'>もしくは</p>
    <%= link_to '一覧へ戻る', jobs_path , class:'jobs-return-btn' %>
    <%else%>
         <% if @job.job_history == nil  %> 
            <%= link_to '申し込む',  job_jobnegotiations_path(@job.id), method: :get,class:"job-nego-btn"%> 
            <p class ="">または</p>
            <%= link_to '一覧へ戻る', jobs_path , class:'jobs-return-btn' %>
            <%else%>
            <%= link_to '一覧へ戻る', jobs_path , class:'jobs-return-btn' %>
          <%end %>
    <% end %> 

    <div class = "main-bottom">
    <%= image_tag "backimage2.jpg", class: "foot-img" %>
    </div>
 </div>
<%= render "shared/footer" %>